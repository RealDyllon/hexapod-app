{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "lib": ["ES2020", "DOM"],
    "paths": {
      "_/*": ["src/*"],
      "_public/*": ["public/*"],
      "_main/*": ["src/main/*"],
      "_models/*": ["src/models/*"],
      "_renderer/*": ["src/renderer/*"],
      "_utils/*": ["src/utils/*"]
    },
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es5",
    "types": ["node", "jest"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
